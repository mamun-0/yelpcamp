<% layout('layouts/boilerplate') %>
<div class="container-fluid">
  <div class="hero-img">
    <h2 class="display-4">Welcome to YelpCamp</h2>
    <p class="lead">View campgrounds all over the world</p>
  </div>
  <div class="container">
    <h2 class="display-5 text-center">Campgorunds</h2>
    <input
      type="text"
      class="form-control my-3 campground-search"
      type="text"
      name="search"
      placeholder="Search Campgrounds..."
      aria-label="Search" />
    <div class="row">
      <% for(let campground of campgrounds){ %>
      <div class="col-4">
        <div class="card mb-4 shadow card-hover" style="width: 18rem">
          <img
            src="<%= campground.image %>"
            class="card-img-top"
            alt="cardImage"
            width="300px"
            height="200px" />
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <h5 class="card-title"><%= campground.title %></h5>
              <h5 class="card-title">
                <h4 class="d-inline">&#2547;<%=campground.price%></h4>
              </h5>
            </div>
            <a class="btn btn-info" href="/campgrounds/<%= campground._id %>"
              >Details</a
            >
          </div>
        </div>
      </div>
      <%} %>
    </div>
  </div>
</div>
