<% layout('layouts/boilerplate') %>
<div class="container">
  <div class="row my-4">
    <div class="col-6">
      <div class="card">
        <img
          src="<%= campground.image %>"
          class="card-img-top"
          alt="cardImage"
          width="100%"
          height="20%" />
        <div class="card-body">
          <h5 class="card-title"><%= campground.title %></h5>
          <p class="card-text"><%= campground.description %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            Price :
            <h4 class="d-inline">&#2547;<%= campground.price %></h4>
          </li>
          <li class="list-group-item">Location : <%= campground.location %></li>
          <li class="list-group-item">
            Submitted by : <%= campground.author.username %>
          </li>
        </ul>
        <% if(currentUser && campground.author.equals(currentUser._id)) {%>
        <div class="card-body d-flex">
          <a
            class="btn btn-primary"
            href="/campgrounds/<%= campground._id %>/edit"
            >Edit</a
          >
          <form
            class="ms-2"
            action="/campgrounds/<%= campground._id%>?_method=DELETE"
            method="POST">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
      <a class="btn btn-info mt-2" href="/campgrounds">ðŸ‘ˆBack</a>
    </div>
    <div class="col-6">
      <% if(!currentUser){ %>
      <h2>Login & Leave a reviewâ†™</h2>
      <a href="/user/login" class="btn btn-primary">LoginðŸ‘ˆ</a>
      <% }else{ %>
      <h2>Leave a review</h2>
      <form
        action="/campgrounds/<%= campground._id %>/review"
        method="POST"
        class="validated-form border border-primary p-2"
        novalidate>
        <div class="mb-2">
          <label class="form-label" for="rating">Rating</label>
          <input
            class="form-range"
            type="range"
            min="1"
            max="5"
            name="review[rating]"
            id="rating"
            required />
        </div>
        <div>
          <textarea
            placeholder="fill free to give opitions!"
            class="form-control"
            name="review[body]"
            required></textarea>
        </div>
        <button class="btn btn-outline-warning my-3">Submit</button>
      </form>
      <% } %>

      <h2 class="my-3">Review Section</h2>
      <% for(let review of campground.reviews){ %>
      <div class="card mb-3 p-2">
        <div class="card-body">
          <h4 class="lead card-title">Review : <%= review.body %></h4>
          <p class="card-text">Rating : <%= review.rating%></p>
          <b>Reviewed by : <%= review.author.username %></b>
        </div>
        <% if(currentUser && review.author.equals(currentUser._id)) {%>
        <form
          action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE"
          method="POST">
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <% } %>
      </div>

      <% } %>
    </div>
  </div>
</div>
